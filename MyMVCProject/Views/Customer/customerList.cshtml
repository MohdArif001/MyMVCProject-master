@model IEnumerable<MyMVCProject.Models.Customer>
<div class="row">
    <div class="col-6">
        @if(Model.Count()==0)
            {
            <h3>No employee found at this location !</h3>
            }
            else
            {
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach (var cust in Model)
        {
            <tr>
                <td>@cust.Name</td>
                <td><a asp-action="CustomerDetails" asp-controller="Customer" asp-route-id="@cust.Id" >View Detail</a></td>
            </tr>

        }
    </table>
            }
    </div>

</div>
    
    
    
    
    

